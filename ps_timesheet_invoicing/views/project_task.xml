<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_task_form_ps">
        <field name="name">project.task.form.ps</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
        <field name="arch" type="xml">
            <field name="progress" position="after">
                <field name="standard" />
            </field>
        </field>
    </record>
    <record id="view_task_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="domain">[('is_company','=',True)]</attribute>
            </field>
            <page name="description_page" position="before">
                <page name="users" string="Fee Earners">
                    <field name="task_user_ids">
                        <tree>
                            <field name="user_id" />
                            <field name="from_date" />
                            <field name="product_id" />
                            <field name="fee_rate" />
                            <field name="ic_fee_rate" />
                            <field name="margin" />
                        </tree>
                        <form>
                            <group>
                                <field name="user_id" />
                                <field name="from_date" />
                                <field name="product_id" />
                                <field name="fee_rate" />
                                <field name="ic_fee_rate" />
                                <field name="cost_rate" />
                                <field name="margin" />
                            </group>
                        </form>
                    </field>
                </page>
            </page>
        </field>
    </record>
</odoo>
